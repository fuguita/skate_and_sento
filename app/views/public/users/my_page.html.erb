<h2>MY PAGE</h2>
  <h4>登録情報</h4>
    <div>
        <p>アカウント名
        <%= current_user.name %></p>
        <p>メールアドレス
        <%= current_user.email %></p>
    </div>
      <div>
          <p><%= link_to "My Favotite Park", park_favorites_users_path(current_user) %></p>
          <p><%= link_to "My Favotite 銭湯", sento_favorites_users_path(current_user) %></p>
          <p><%= link_to "会員情報を変更", edit_information_user_path(current_user) %></p>
          <p><%= link_to "Log-Out", destroy_user_session_path, method: :delete %></p>
      </div>

  <h3>My Skate And Sento Posts</h3>
      <table class="table table-borderless">
          <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td>エリア:<%= link_to posts_path(prefecture_id: post.prefecture_id) do %>
                    <%= post.prefecture_id %>
                    <% end %>
                    投稿者：<%= link_to posts_user_path(post.user_id) do %><%= post.user.name %><% end %></td>
                    <td></td>
                    <td><%= l post.created_at, format: :short %></td>
                </tr>
                <tr>
                    <td><%= image_tag post.get_post_park_image, size: '200x200' %></td>
                    <td>パーク名<br>コメント</td>
                    <td><%= post.park %><br><%= post.park_caption %></td>
                </tr>
                <tr>
                    <td><%= image_tag post.get_post_sento_image, size: '200x200' %></td>
                    <td>銭湯名<br>コメント</td>
                    <td><%= post.sento %><br><%= post.sento_caption %></td>
                </tr>
                <tr>
                    <td>タグ</td>
                    <td></td>
                    <td>
                      <% post.post_tags.each do |post_tag| %>
                        #<%= link_to posts_path(post_tag_id: post_tag.id) do %>
                            <%= post_tag.name %>
                         <% end %>
                      <% end %>
                    </td>
                </tr>
                <tr>
                  <td></td>
                    <td id="like_buttons_<%= post.id %>">
                      <%= render 'public/likes/like', post: post %>
                    </td>
                    <td>
                      コメント：<%= post.post_comments.count %>件
                    </td>
                </tr>
                <tr>
                    <% post.post_comments.each do |post_comment| %>
                      <td>
                          <%= link_to posts_user_path(post_comment.user.id ) do %>
                            <%= post_comment.user.name %>
                          <% end %>
                          のコメント<br>
                            <%= post_comment.comment %>
                            <% if post_comment.user == current_user %>
                              <%= link_to "コメントを削除する", post_post_comment_path, method: :delete %>
                            <% end %>
                      </td>
                    <% end %>
                </tr>
                <tr>
                      <td></td>
                      <td></td>
                    <% if post.user == current_user %>
                      <td><%= link_to "編集する", edit_post_path(post.id) %> <%= link_to "削除する", post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
                    <% end %>
                </tr>
            <% end %>
          </tbody>
</table>

      <%#= render 'public/posts/list', posts: @posts, user: @user, post_comment: @post_comment%>


