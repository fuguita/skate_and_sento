<% post.post_comments.each do |post_comment| %>

            <div>
                <%= l post_comment.created_at, format: :default %><br>
                <%= link_to posts_user_path(post_comment.user.id) do %>
                <%= post_comment.user.name %>
                <% end %>:<br>
                <%= post_comment.comment %>
                    <% if post_comment.user == current_user %>
                      <%= link_to "コメントを削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, data: { confirm: 'コメントを削除しますか？'} %>
                      <% elsif post_comment.post.user == current_user %>
                      <%= link_to "ユーザーのコメントを削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, data: { confirm: 'コメントを削除しますか？'} %>
                    <% end %>
            </div>

<% end %>