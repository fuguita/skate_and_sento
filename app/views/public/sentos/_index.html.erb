<h4>
<%= link_to sento_path(sento.id) do %><%= sento.name %><% end %>
</h4>
  <div id="sento-btn-<%= sento.id %>">
    <h5>
      <%= render 'public/sentos/sento_favorite_buttun', sento: sento %>
    </h5>
  </div>

<% sento.sento_tags.each do |sento_tag| %>
    #<%= link_to sentos_path(sento_tag_id: sento_tag.id) do %>
      <%= sento_tag.name %>
    <% end %>
<% end %>
      <%= sento.address %>
      エリア：<%= sento.prefecture_id %>
        <% if sento.parks.present? %>
            <% sento.parks.each do |park| %>
                最寄りパーク:<%= link_to park_path(park.id) do %>
                  <%= park.name %>
                <% end %>
            <% end %>
        <% else %>
            最寄り銭湯♨︎:まだ情報はありません
        <% end %>
      <% sento.sento_images.each do |sento_image| %>
        <%= image_tag sento_image, size: '200x200' %>
      <% end %>