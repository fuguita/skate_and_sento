<div class="park-list">
  <div class="park-image-index">
        <%= image_tag sento.sento_images.first, size: '600x400', class: "park_image" %>
  </div>
      <h4>
        <%= link_to sento_path(sento.id), class: "park_name_index" do %><%= sento.name %><% end %>
      </h4>
      <div class="park-mini-info">
          <i class="fas fa-map-pin fa-lg"></i>  <%= sento.address %><br>
        <% if sento.parks.present? %>
            <% sento.parks.each do |park| %>
                <i class="fas fa-hot-tub fa-lg"></i>  最寄りパーク：<%= link_to park_path(park.id), class: 'near-sento' do %>
                  <%= park.name %>
                <% end %>
            <% end %>
        <% else %>
                <i class="fas fa-hot-tub fa-lg"></i>  最寄りパーク︎:まだ情報はありません
        <% end %>
      </div>
        <% sento.sento_tags.each do |sento_tag| %>
              <%= link_to sentos_path(sento_tag_id: sento_tag.id), class: "btn btn-outline-warning rounded-pill btn-sm mt-2 mb-1" do %>
                <%= sento_tag.name %>
              <% end %>
        <% end %>
      <div id="sento-btn-<%= sento.id %>">
        <h5>
          <%= render 'public/sentos/sento_favorite_buttun', sento: sento %>
        </h5>
      </div>
</div>
