<% if @tag.present? %>
  <%= link_to  sentos_path, class: "back-link-park-sento" do %>
  <i class="fas fa-angle-double-left"></i>銭湯LIST
  <% end %><br>
  <button class="btn btn-outline-warning rounded-pill btn-lg mt-3 mb-4"><%= @tag.name %></button><span class="letter">を含んだ</span><br>
  <h2 class="park-and-sento-tag-title">銭湯 LIST(全<%= @sentos.total_count %>件)</h2>
<% else %>
  <h2 class="park-sento-title-index mt-5 mb-5">銭湯LIST(全<%= @sentos.total_count %>件)</h2>
<% end %>
<% @sentos.each do |sento| %>
  <%= render 'index', sento: sento %>
<% end %>
<div class="page">
 <%= paginate @sentos%>
</div>