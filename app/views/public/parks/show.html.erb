<h2><%= @park.name %></h2>
  <% @park.park_images.each do |park_image| %>
      <%= image_tag park_image, size: '300x300' %>
  <% end %>
 <table class="table table-borderless">
           <tbody>
              <tr>
                  <td>エリア</td>
                  <td><%= @park.prefecture_id %></td>
              </tr>
              <tr>
                  <td>紹介</td>
                  <td><%= @park.introduction %></td>
              </tr>
              <tr>
                  <td>住所</td>
                  <td><%= @park.address %></td>
              </tr>
              <tr>
                  <td>郵便番号</td>
                  <td>〒<%= @park.postal_code %></td>
              </tr>
              <tr>
                  <td>オープン時間</td>
                  <td><%= @park.business_hour %></td>
              </tr>
              <tr>
                  <td>定休日</td>
                  <td><%= @park.holiday %></td>
              </tr>
              <tr>
                  <td>TEL</td>
                  <td><%= @park.telephone_number %></td>
              </tr>
              <tr>
                  <td>料金</td>
                  <td><%= @park.price %></td>
              </tr>
              <tr>
                  <td>無料パーキング</td>
                  <td><%= @park.parking %></td>
              </tr>
              <tr>
                  <td>ヘルメット義務</td>
                  <td><%= @park.helmet %></td>
              </tr>
          </tbody>
        </table>
  <h3>セクション</h3>
      <% Section.all.each do |section| %>
        <% if @park.sections.include?(section) %>
          ○<%= section.name %>
        <% else %>
          x<%= section.name %>
        <% end %>
      <% end %>

    <h3>最寄り銭湯</h3>
    <% if @park.sentos.present? %>
        <% @park.sentos.each do |sento| %>
            <%= link_to admin_sento_path(sento.id) do %>
              <h4><%= sento.name %></h4>
            <% end %>
        <% end %>
    <% else %>
      <h5>まだ情報はありません</h5>
    <% end %>

