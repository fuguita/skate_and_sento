<%- if controller_name != 'sessions' %>
  <div class="signin-link-caption">登録済みの方はこちらから→
    <%= link_to "Log in", new_session_path(resource_name), class: "signin-login-out-link" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="signin-link-caption">未登録の方はこちらから→
  <%= link_to "Sign up", new_registration_path(resource_name), class: "signin-login-out-link" %>
  </div>
<% end %>
