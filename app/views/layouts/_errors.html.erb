<%# byebug %>
<div class="errors-color">
  <% if obj.errors.any? %>
    <div id="error_explanation">
      <h4><%= t("errors.template.header", model: obj.model_name.human, count: obj.errors.count) %></h4>

      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% else %>
  <div id="error_explanation"></div>
  <% end %>
</div>