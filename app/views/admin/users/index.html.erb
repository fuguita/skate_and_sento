<h2>ユーザー一覧</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>投稿数</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @users.each do |user| %>
    <tr>
        <td><%= user.id %></td>
        <td><%= link_to admin_user_path(user) do %>
        <%= user.name %>
        <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.posts.count %><%= link_to "投稿一覧", posts_admin_user_path(user.id) %></td>
      <% if user.is_deleted  == false %>
        <td>有効</td>
      <% else %>
        <td>無効</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

