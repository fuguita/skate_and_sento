<h3 class="admin-title mt-5">ユーザー一覧</h2>
<h5>全<%= @users.total_count %>件</h5>
<table class="table table-bordered table-striped">
  <thead>
    <tr align="center">
      <th>ID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>投稿数</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @users.each do |user| %>
    <tr align="center">
        <td><%= user.id %></td>
        <td><%= link_to admin_user_path(user), class: "admin-obj-name-link" do %>
        <%= user.name %>
        <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.posts.count %>件<%= link_to "一覧へ", posts_admin_user_path(user.id), class: "btn btn-sm btn-info ml-4" %></td>
      <% if user.is_deleted  == false %>
        <td>有効</td>
      <% else %>
        <td>無効</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="page">
  <%= paginate @users %>
</div>

