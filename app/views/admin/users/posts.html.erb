<% if @user.posts.count == 0 %>
<h3>投稿はまだありません</h3>
<% else %>
<h2><%= @user.name %>の投稿一覧</h2>
全<%= @user.posts.count %>件
  <table class="table table-bordered">
    <thead>
      <tr>
        <td>投稿日</td>
        <td>パーク名</td>
        <td>銭湯名</td>
        <td>エリア</td>
        <td>いいね</td>
        <td>コメント</td>
        <td>詳細</td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= l post.created_at, format: :short %></td>
          <td><%= post.park %></td>
          <td><%= post.sento %></td>
          <td><%= post.prefecture_id %></td>
          <td><%= post.likes.count %></td>
          <td><%= post.post_comments.count %></td>
          <td><%= link_to "表示する", admin_post_path(post.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>