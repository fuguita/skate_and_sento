<h3 class="admin-title mt-5">パークタグ新規作成・一覧</h3>
  <%= form_with model: @park_tag, url: admin_park_tags_path, method: :post do |f| %>
    <%= render 'layouts/errors', obj: @park_tag %>
    <%= f.text_field :name, placeholder: 'タグ名', class: "form-control col-3 mb-2" %>
    <%= f.submit "登録する", class: "btn btn-sm btn-primary mb-5" %>
  <% end %>

<h3 class="admin-title">パークタグ一覧</h3>
  <div class="admin-tag-list">
    <table class="table table-striped col-5">
      <% @park_tags.each do |park_tag| %>
      <tr>
        <td><%= park_tag.name %></td>
        <td><%= link_to "変更する", edit_admin_park_tag_path(park_tag.id), class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>
