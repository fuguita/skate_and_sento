<%= link_to  admin_sento_tags_path, class: "back-link-park-sento" do %>
  <i class="fas fa-angle-double-left"></i>戻る
<% end %><br>
<h3 class="admin-title mt-5">銭湯タグ編集</h3>
  <%= form_with model: @sento_tag, url: admin_sento_tag_path, method: :patch do |f| %>
    <%= render 'layouts/errors', obj: @sento_tag %>
    <%= f.text_field :name, class: "form-control col-3 mb-2" %>
    <%= f.submit "変更する", class: "btn btn-sm btn-success" %>
  <% end %>