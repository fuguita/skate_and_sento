<h3 class="admin-title mt-5">銭湯タグ新規作成・一覧</h3>
  <%= form_with model: @sento_tag, url: admin_sento_tags_path, method: :post do |f| %>
    <%= render 'layouts/errors', obj: @sento_tag %>
    <%= f.text_field :name, placeholder: 'タグ名', class: "form-control col-3 mb-2" %>
    <%= f.submit "登録する", class: "btn btn-sm btn-primary mb-5" %>
  <% end %>

<h3 class="admin-title">銭湯タグ一覧</h3>
  <div class="admin-tag-list">
    <table class="table table-striped col-5">
      <% @sento_tags.each do |sento_tag| %>
      <tr>
        <td><%= sento_tag.name %></td>
        <td><%= link_to "変更する", edit_admin_sento_tag_path(sento_tag.id), class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>



