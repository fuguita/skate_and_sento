<h3 class="admin-title mt-5">投稿タグ新規作成・一覧</h3>
  <%= form_with model: @post_tag, url: admin_post_tags_path, method: :post do |f| %>
    <%= render 'layouts/errors', obj: @post_tag %>
    <%= f.text_field :name, placeholder: 'タグ名', class: "form-control col-3 mb-2" %>
    <%= f.submit "登録する", class: "btn btn-sm btn-primary mb-5" %>
  <% end %>

<h3 class="admin-title">投稿タグ一覧</h3>
  <div class="admin-tag-list">
    <table class="table table-striped col-5">
      <% @post_tags.each do |post_tag| %>
      <tr>
        <td><%= post_tag.name %></td>
        <td><%= link_to "変更する", edit_admin_post_tag_path(post_tag.id), class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>