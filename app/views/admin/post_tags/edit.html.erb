<h3 class="admin-title mt-5">投稿タグ編集</h3>
  <%= form_with model: @post_tag, url: admin_post_tag_path, method: :patch do |f| %>
    <%= render 'layouts/errors', obj: @post_tag %>
    <%= f.text_field :name, class: "form-control col-3 mb-2" %>
    <%= f.submit "変更する", class: "btn btn-sm btn-success" %>
  <% end %>