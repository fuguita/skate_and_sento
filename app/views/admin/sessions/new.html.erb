<h2 class="admin-title mt-5">管理者ログイン</h2>
<div class="card-block">
  <div class="card col-5 mb-5">
    <div class="admin-card-title">
      管理者用ページ
    </div>
    <div class="card-body login-card-body">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
         <div class="input-group mb-3">
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'メールアドレス' %>
             <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                  </div>
                </div>
            </div>
            <div class="input-group mb-3">
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'パスワード' %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
            </div>
            <div class='row'>
              <div class='col-12'>
                <%= f.submit "Log in", class: "form-control btn btn-primary mb-3" %>
              </div>
            </div>
      <% end %>
<%= render "admin/shared/links" %>
