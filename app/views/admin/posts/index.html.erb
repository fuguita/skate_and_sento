<h3 class="admin-title mt-5">ユーザー投稿一覧</h3>
<h5>全<%= @posts.total_count %>件</h5>
  <table class="table table-bordered table-striped">
    <thead>
      <tr align="center">
        <td>投稿日</td>
        <td>ユーザー名</td>
        <td>パーク名</td>
        <td>銭湯名</td>
        <td>エリア</td>
        <td>いいね</td>
        <td>コメント</td>
        <td>詳細</td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr align="center">
          <td><%= l post.created_at, format: :short %></td>
          <td><%= link_to admin_user_path(post.user.id), class: "admin-obj-name-link" do %><%= post.user.name %><% end %></td>
          <td><%= post.park %></td>
          <td><%= post.sento %></td>
          <td><%= post.prefecture_id %></td>
          <td><%= post.likes.count %></td>
          <td><%= post.post_comments.count %></td>
          <td><%= link_to "表示する", admin_post_path(post.id), class: "btn btn-sm btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div class="page">
    <%= paginate @posts %>
</div>