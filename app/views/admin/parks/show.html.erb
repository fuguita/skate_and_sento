<%= link_to  admin_parks_path, class: "back-link-park-sento" do %>
  <i class="fas fa-angle-double-left"></i>PARK LIST
<% end %><br>
<h2 class="admin-title mt-5">
  パーク詳細
</h2>
  <div class="park-sento-title-row">
    <h2 class="park-sento-name"><%= @park.name %></h2>
  </div>
  <div class="park-sento-image-index">
    <h3 class="admin-near-link mt-5">
      <%= link_to "最寄り銭湯を追加、詳細を編集する", edit_admin_park_path(@park), class: "btn btn-lg btn-warning" %>
    </h3>
    <% @park.park_images.each do |park_image| %>
        <%= image_tag park_image, size: '700x450', class: "park_sento_image" %><br>
    <% end %>
    <div class="park-sento-intro">
      <%= @park.introduction %>
    </div>
    <div class="park-sento-tag-list">
      <i class="fas fa-tag" style="color: #628961;"></i>
      <% @park.park_tags.each do |park_tag| %>
        #<%= park_tag.name %>
      <% end %>
    </div>
  </div>
<h3 class="info-title">基本情報</h3>
  <div class="park-sento-info">
    <table class="table table-borderless">
      <tbody>
        <tr>
            <td>掲載ステータス</td>
            <td><%= @park.active_status %></td>
        </tr>
        <tr>
            <td>エリア</td>
            <td><%= @park.prefecture_id %></td>
        </tr>
        <tr>
            <td>住所</td>
            <td><%= @park.address %></td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td>〒<%= @park.postal_code %></td>
        </tr>
        <tr>
            <td>オープン時間</td>
            <td><%= @park.business_hour %></td>
        </tr>
        <tr>
            <td>定休日</td>
            <td><%= @park.holiday %></td>
        </tr>
        <tr>
            <td>TEL</td>
            <td><%= @park.telephone_number %></td>
        </tr>
        <tr>
            <td>料金</td>
            <td><%= @park.price %></td>
        </tr>
        <tr>
            <td>無料パーキング</td>
            <td><%= @park.parking %></td>
        </tr>
        <tr>
            <td>ヘルメット義務</td>
            <td><%= @park.helmet %></td>
        </tr>
      </tbody>
    </table>
  </div>
<div>
  <h3 class="info-title">セクション</h3><br>
        <% Section.all.each do |section| %>
          <% if @park.sections.include?(section) %>
            ○<%= section.name %><br>
          <% else %>
            x<%= section.name %><br>
          <% end %>
        <% end %>
</di>
<div class="near-name">
    <h3 class="info-title">最寄り銭湯</h3><br>
    <% if @park.sentos.present? %>
        <% @park.sentos.each do |sento| %>
            <%= link_to admin_sento_path(sento.id), class: 'near' do %>
              <%= sento.name %>
            <% end %>
        <% end %>
    <% else %>
      <h5>まだ情報はありません</h5>
    <% end %>
</div>
<h3 class="admin-near-link">
  <%= link_to "最寄り銭湯を追加、詳細を編集する", edit_admin_park_path(@park), class: "btn btn-lg btn-warning" %>
</h3>




