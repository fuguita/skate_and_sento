<h2>SKATE PARK LIST</h2>
  <h4><%= link_to "パーク新規登録", new_admin_park_path %></h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>パーク名</th>
          <th>エリア</th>
          <th>お気に入り数</th>
          <th>レビュー数</th>
          <th>レビューの評価(1~5)</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @parks.each do |park| %>
          <tr>
            <td><%= park.id %></td>
            <td><%= link_to admin_park_path(park.id) do %><%= park.name %><% end %></td>
            <td><%= park.prefecture_id %></td>
            <td><%= park.park_favorites.count %>件</td>
            <td><%= park.park_reviews.count %>件</td>
            <td><%= park.park_reviews.average(:star).to_f.round(1) %></td>
            <td><%= park.active_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @parks %>
